<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:layout_height="230dp"
    android:layout_marginBottom="10dp"
    android:background="@color/background_color_of_cards_in_contact_us_and_events"
    android:id="@+id/card_view_of_events">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color_of_cards_in_contact_us_and_events">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:text="ورشة صناعة الواقع"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/event_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/instructor_name"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="7dp"
            android:background="#d1e0e0"
            android:scaleType="fitXY" />
        <!--TODO :Add borders to image and change its shape-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/instructor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/event_details"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/margin_right_and_start_in_events_card"
            android:layout_marginRight="@dimen/margin_right_and_start_in_events_card"
            android:text="المحاضر : "
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@id/event_details"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/event_date"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/event_image"
            android:layout_marginEnd="@dimen/margin_right_and_start_in_events_card"
            android:layout_marginRight="@dimen/margin_right_and_start_in_events_card"
            android:paddingLeft="5dp"
            android:maxLines="6"
            android:text="هذه الورشة من اهم الورش التي ستفيدك في حياتك كلها فهي ورشة مهمة جدا لك وستسفيد منها كثيرا هذه الورشة من اهم الورش التي ستفيدك في حياتك كلها فهي ورشة مهمة جدا لك وستسفيد منها كثيرا هذه الورشة من اهم الورش التي ستفيدك في حياتك كلها فهي ورشة مهمة جدا لك وستسفيد منها كثيرا هذه الورشة من اهم الورش التي ستفيدك في حياتك كلها فهي ورشة مهمة جدا لك وستسفيد منها كثيرا" />
<!-- TODo :add horizontal scroll view to menue-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/see_more_button"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="التاريخ : "
            android:textStyle="bold" />

        <Button
            android:id="@id/see_more_button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/new_button"
            android:text="See more..."
            android:textColor="@color/white" />
    </RelativeLayout>
</android.support.v7.widget.CardView>