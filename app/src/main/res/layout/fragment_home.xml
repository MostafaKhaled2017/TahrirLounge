<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/facebook_icon_and_text_in_home"
            android:text="Facebook"
            android:layout_marginTop="@dimen/margin_top_of_text_view_in_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:drawableTop="@drawable/facebook_round"
            android:textSize="@dimen/text_size_in_home"
            android:layout_marginLeft="@dimen/margin_left_and_right_in_home"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/twitter_icon_and_text_in_home"
            android:text="Twitter"
            android:layout_marginTop="@dimen/margin_top_of_text_view_in_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/twitter_round"
            android:textSize="@dimen/text_size_in_home"
            android:textAlignment="center"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/youtube_icon_and_text_in_home"
            android:text="YouTube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/youtube_round"
            android:textSize="@dimen/text_size_in_home"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/margin_left_and_right_in_home"
            android:layout_marginTop="@dimen/margin_top_of_text_view_in_home"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/about_us_icon_and_text_in_home"
            android:text="About Us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/about_us"
            android:textSize="@dimen/text_size_in_home"
            android:textAlignment="center"
            android:layout_alignTop="@+id/contact_us_icon_and_text_in_home"
            android:layout_alignLeft="@+id/facebook_icon_and_text_in_home"
            android:layout_alignStart="@+id/facebook_icon_and_text_in_home" />
        <TextView
            android:id="@+id/contact_us_icon_and_text_in_home"
            android:text="Contact Us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/contact_us"
            android:textSize="@dimen/text_size_in_home"
            android:layout_marginTop="@dimen/margin_top_between_icons"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/twitter_icon_and_text_in_home"/>
        <TextView
            android:id="@+id/our_partners_icon_and_text_in_home"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="Our partners"
            android:layout_marginTop="@dimen/margin_top_between_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableTop="@drawable/our_partners"
            android:textSize="@dimen/text_size_in_home"
            android:textAlignment="center"
            android:layout_below="@id/contact_us_icon_and_text_in_home" />
        <TextView
            android:id="@+id/our_team_icon_and_text_in_home"
            android:text="Our Team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:drawableTop="@drawable/our_team"
            android:textSize="@dimen/text_size_in_home"
            android:layout_alignBaseline="@+id/our_partners_icon_and_text_in_home"
            android:layout_alignBottom="@+id/our_partners_icon_and_text_in_home"
            android:layout_alignRight="@+id/about_us_icon_and_text_in_home"
            android:layout_alignEnd="@+id/about_us_icon_and_text_in_home" />
        <TextView
            android:id="@+id/events_icon_and_text_in_home"
            android:text="Events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:drawableTop="@drawable/events"
            android:textSize="@dimen/text_size_in_home"
            android:layout_marginRight="@dimen/margin_left_and_right_in_home"
            android:layout_marginTop="55dp"
            android:layout_below="@id/youtube_icon_and_text_in_home"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/gallery_icon_and_text_in_home"
            android:layout_below="@+id/events_icon_and_text_in_home"
            android:text="Gallery"
            android:layout_marginRight="@dimen/margin_left_and_right_in_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_top_between_icons"
            android:drawableTop="@drawable/gallery_round"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_in_home"
 />
    </RelativeLayout>
</ScrollView>